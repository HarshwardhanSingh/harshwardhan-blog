<div class="signin-form">
  <h4>Admin Sign In</h4>
  <%= simple_form_for :user_session, url: url_for(action: "create", controller: "sessions"), method: "post" do |f| %>
    <div class="form-group">
      <%= f.input :username, label: false, input_html: { placeholder: "Username" } %>
    </div>
    <div class="form-group">
      <%= f.input :password, label: false, input_html: { placeholder: "Password" } %>
    </div>
    <div class="form-actions">
      <%= f.submit "Sign In", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
